{
	"compilerOptions": {
		"outDir": "lib",
		"module": "commonjs",
		"target": "es5",
		"lib": ["es6", "es2017", "dom"],
		"sourceMap": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules", "lib", "es"]
}
